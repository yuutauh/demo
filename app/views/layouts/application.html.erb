<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
     <% if current_user %>
            <%= link_to '掲示板一覧', boards_path, class:'nav-link nav-item'%>
            <%= link_to 'ユーザー一覧', users_path, class:'nav-link nav-item'%>
            <%= link_to 'ログアウト', logout_path, method: :delete, class:'nav-link nav-item'%>
      <% else %>
            <%= link_to 'ログイン', login_path, class:'nav-link nav-item'%>
      <% end %>
     </nav>
    <div class="container">
        <%= yield %>
      </div>
  </body>
</html>
