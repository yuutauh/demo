<div class="d-flex align-items-center">
 <h1>ユーザー一覧</h1>
 <div class="ml-auto boards__linkbox">
  <%= link_to 'ユーザー登録', new_user_path, class: 'btn btn-outline-dark' %>
 </div>
</div>
 
 <% if flash[:notice] %>
   <div class="alert alert-primary"><%= flash[:notice] %></div>
 <% end %>

<table class="table table-dark">
  <thead>
     <tr>
       <th>id</th>
       <th>ユーザー権限</th>
       <th>作成者</th>
       <th>作成日時</th>
       <th>更新日時</th>
       <th></th>
       <th></th>
     </tr>
  </thead>
  <tbody>
      <% @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.admin? ? 'あり' : 'なし' %></td>
            <td><%= user.name %></td>
            <td><%= user.created_at.strftime('%Y年 %m月 %d日 %H時 %M分') %></td>
            <td><%= user.updated_at.to_s(:datetime_jp) %></td>
            <td><%= link_to '詳細', user , class: 'btn btn-light' %></td>
            <td><%= link_to '削除', user , class: 'btn btn-light', method: :delete %></td>
        </tr>
      <% end %>  
  </tbody>
</table>
